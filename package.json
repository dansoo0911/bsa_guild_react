{
  "name": "react-apps-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:app1": "npm run dev --workspace=apps/app1",
    "build:app1": "npm run build --workspace=apps/app1",
    "preview:app1": "npm run preview --workspace=apps/app1",
    "dev:app2": "npm run dev --workspace=apps/app2",
    "build:app2": "npm run build --workspace=apps/app2",
    "preview:app2": "npm run preview --workspace=apps/app2",
    "dev": "npm run dev:app1",
    "build": "npm run build:app1",
    "preview": "npm run preview:app1"
  },
  "devDependencies": {}
}

